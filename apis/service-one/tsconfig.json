{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "types": [
            "node",
            "jest"
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./types"
        ]
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
        "config/*.ts",
        "scripts/**/*.ts",
        "../shared/**/*.ts",
         "src/test.ts"    
    ],
    "exclude": [
        "node_modules"
    ]
}